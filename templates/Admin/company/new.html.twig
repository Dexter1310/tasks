{% extends "base.html.twig" %}

{% block title %}Company{% endblock %}
{% block body %}
    {% block nav %}
        {{ parent() }}
    {% endblock %}
    <section id="new-service">
        <div class="container">
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                {{ form_start(formCompany,{ 'attr': {'enctype': 'multipart/form-data' } }) }}
                <div class="row">
                    <div class="col-md-6"><h1>Nueva Empresa</h1></div>
                    <div class="col-md-6"><a style="float: right" href="{{ path('admin.task') }}"
                                             class="nav-item nav-link"><b>Listado
                                de Empresas</b></a></div>
                </div>
                <br>
                <div class="row">
                    <div class="form-group col-md-4">
                        <label>Nombre de la empresa :</label>
                        {{ form_widget(formCompany.name,{ 'attr': {'class': 'form-control','placeholder':'Nombre empresa' } }) }}
                        {{ form_errors(formCompany.name) }}
                    </div>
                    <div class="form-group col-md-4">
                        <label>Imagen url :</label>
                        {{ form_widget(formCompany.logo,{ 'attr': {'class': 'form-control','placeholder':'logo' } }) }}
                        {{ form_errors(formCompany.logo) }}
                    </div>
                    <div class="form-group col-md-4">
                        <label>E-mail:</label>
                        {{ form_widget(formCompany.email,{ 'attr': {'class': 'form-control','placeholder':'email@email.com' } }) }}
                        {{ form_errors(formCompany.email) }}
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label>Direcci贸n :</label>
                        {{ form_widget(formCompany.address,{ 'attr': {'class': 'form-control','placeholder':'direcci贸n completa' } }) }}
                        {{ form_errors(formCompany.address) }}
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="form-group col-md-10">
                        <label>Descripci贸n:</label>
                        {{ form_widget(formCompany.description,{ 'attr': {'class': 'form-control','placeholder':'Descripci贸n sobre la empresa..','rows': 5 } }) }}
                        {{ form_errors(formCompany.description) }}
                    </div>
                    <div class="form-group col-md-2 mt-4 text-center">
                        <button class="btn btn-dark" type="submit" id="btn-save-service">Guardar</button>
                    </div>
                </div>
                {{ form_end(formCompany) }}
            {% endif %}
        </div>
    </section>
{% endblock %}
