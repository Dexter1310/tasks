{% extends "base.html.twig" %}
{% block title %}Show user{% endblock %}
{% block body %}
    {% block nav %}
        {{ parent() }}
    {% endblock %}
    <div class="container" id="front-show-user">
        <h3>Informaci√≥n del usuario </h3>
        <div class="row">
            <div class="col-3">
                <b>Usuario: </b><span>{{ user.username }}</span>
            </div>
            <div class="col-3">
                <b>Email: </b> <span>{{ user.email }}</span>
            </div>
            <div class="col-3">
                <b>Tipo de usuario: </b> <span>{{ user.type }}</span>
            </div>
            <div class="col-3">
                {% if user.type == 'operator' %}
                    <div class="container">
                        <a href="{{ path('admin.user') }}">
                            <button class="btn btn-warning">Volver</button>
                        </a>
                        <a href="#">
                            <button class="btn btn-dark">Asignar Tarea</button>
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>


    </div>

{% endblock %}