{% extends "base.html.twig" %}

{% block title %}Home{% endblock %}
{% block body %}
    {% block nav %}
        {{ parent() }}
    {% endblock %}
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <div class="container user-admin-index">
            <h1>Usuarios
                <a style="color: #1d2124;float: right" href="{{ path('newuser') }}"
                   class="nav-item nav-link"><b><i class="bi bi-person-plus-fill"></i></b></a>
            </h1>
            <p id="info-admin"></p>
            <div style="width: 95%" id="admin-user">Loading...</div>
            <script src="{{ asset('bundles/datatables/js/datatables.js') }}"></script>
            <script>
                $(function () {
                    $('#admin-user').initDataTables({{ datatable_settings(datatable) }}
                        , {
                            searching: true,
                            dom: '<"html5buttons"B>lTfgitp',
                            buttons: [
                                'copy',
                                {extend: 'pdf', title: 'domains'},
                                {extend: 'print'}
                            ]
                        }).then(function (dt) {
                        // dt contains the initialized instance of DataTables
                        dt.on('draw',
                            function () {
                        })
                    });
                });
            </script>
        </div>
    {% endif %}
{% endblock %}